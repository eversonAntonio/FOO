         <BorderPane.margin>
            <Insets right="20.0" top="20.0" />
         </BorderPane.margin>
      </Button>
   </top>
   <bottom>
          <Button fx:id="voltarBtn" mnemonicParsing="false" onAction="#chamaCenaLogin" text="Cadastrar" BorderPane.alignment="BOTTOM_RIGHT">
